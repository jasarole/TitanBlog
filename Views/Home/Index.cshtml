@using TitanBlog.Services.Interfaces

@model IEnumerable<Blog>
@inject IImageService _imageService
<!-- Hero Section-->
<section style="background: url(/images/code_bg.jpeg); cover; background-position: center center" class="hero border-bottom">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <span class="bg-dark mb-2 p-2 shadow-lg">
                    <h1 style="color: #90E70D "> File <i class="fa fa-caret-right"></i> New <i class="fa fa-caret-right"></i> Project </h1>
                </span>
                <span class="bg-dark p-2 shadow-lg">
                    <h2 class="text-uppercase" style="color: #F2FF03 ">A blog about all things tech and dev</h2>
                </span>
            </div>
        </div><a href=".intro" class="continue link-scroll"><i class="fa fa-long-arrow-down"></i> Scroll Down</a>
    </div>
</section>

<!-- Intro Section-->
<section class="intro">
    <div class="container">
        <div class="row">
            <div class="bg-dark p-2 col-lg-8">
                <h2 class="h3" style="color: #00A7DB; ">The easiest part of coding is starting a new project.</h2>
                <p class="text-big">Welcome to the blog of <strong>Jason Lynn</strong> owner of  <a href="http://jasondevs.com" style="color:#F2FF03;"><strong>jasondevs.com</strong></a>. I'm a full-stack developer from North Carolina. I primarily develop MVC applications with .NET and C#, but I tend to cover the entire stack in every project. I have previous experience with graphic design so I never forget about the UX/UI! If you'd like to read some of my opinions check out the blog topics below. </p>
            </div>
        </div>
    </div>
</section>

<section class="featured-posts no-padding-top">
    <div class="container">
        @{ var loop = 1; }
        @foreach (var blog in Model)
        {
            if (loop % 2 != 0)
            {
                <!-- Post -->
                <div class="row d-flex align-items-stretch">
                    <div class="text col-lg-7">
                        <div class="text-inner d-flex align-items-center">
                            <div class="content">
                                <header class="post-header">
                                    <a asp-controller="Posts" asp-action="BlogPostIndex" asp-route-blogId="@blog.Id">
                                        <h2 class="h4">@blog.Name</h2>
                                    </a>
                                </header>
                                <p>@blog.Description</p>
                                <footer class="post-footer d-flex align-items-center">
                                    <a asp-controller="Posts" asp-action="BlogPostIndex" asp-route-blogId="@blog.Id" class="author d-flex align-items-center flex-wrap">
                                        <div class="avatar"><img src="~/images/profile-img.png" alt="..." class="img-fluid"></div>
                                        <div class="title"><span>Jason Lynn</span></div>
                                    </a>
                                    <div class="date">
                                        <i class="icon-clock"></i>
                                        @blog.Created.ToString("MMM dd, yyyy")
                                    </div>
                                </footer>
                            </div>
                        </div>
                    </div>
                    <div class="image col-lg-5"><img src="@_imageService.DecodeImage(blog.ImageData, blog.ImageType)" alt="..."></div>
                </div>
            }
            else
            {
                <!-- Post -->
                <div class="row d-flex align-items-stretch">
                    <div class="image col-lg-5"><img src="@_imageService.DecodeImage(blog.ImageData, blog.ImageType)" alt="..."></div>
                    <div class="text col-lg-7">
                        <div class="text-inner d-flex align-items-center">
                            <div class="content">
                                <header class="post-header">
                                    <a asp-controller="Posts" asp-action="BlogPostIndex" asp-route-blogId="@blog.Id">
                                        <h2 class="h4">@blog.Name</h2>
                                    </a>
                                </header>
                                <p>@blog.Description</p>
                                <footer class="post-footer d-flex align-items-center">
                                    <a asp-controller="Posts" asp-action="BlogPostIndex" asp-route-blogId="@blog.Id" class="author d-flex align-items-center flex-wrap">
                                        <div class="avatar"><img src="~/images/profile-img.png" alt="..." class="img-fluid"></div>
                                        <div class="title"><span>Jason Lynn</span></div>
                                    </a>
                                    <div class="date">
                                        <i class="icon-clock"></i>
                                        @blog.Created.ToString("MMM dd, yyyy")
                                    </div>
                                </footer>
                            </div>
                        </div>
                    </div>
                </div>
            }

            loop++;
        }

    </div>
</section>

